<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :student_reg_number, "Student Reg Number" %><br />
    <%= f.text_field :student_reg_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
